<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">

            <solid
                android:color="#979797"/>

            <corners
                android:radius="4dp" />

        </shape>
    </item>

    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape
            android:shape="rectangle">

            <solid
                android:color="#ffffff"/>

            <corners
                android:radius="4dp" />

        </shape>
    </item>

    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape
            android:shape="rectangle">

            <gradient
                android:startColor="#62e8e8e8"
                android:endColor="#ffffff"
                android:angle="270"/>

            <corners
                android:radius="4dp" />

        </shape>
    </item>
</layer-list>
