<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/debug_url_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected to: "
                android:paddingBottom="15dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trigger reward (after 5 sec)"
                android:paddingBottom="5dp"/>

            <Button
                android:id="@+id/button_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trigger"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trigger video reward (after 3 sec)"
                android:paddingBottom="5dp"/>

            <Button
                android:id="@+id/button_video_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trigger"/>

            <TextView
                android:id="@+id/debug_store_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store id: "/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>